    <!-- Pre-loader end -->

    <section class="login p-fixed d-flex text-center bg-primary common-img-bg">
        <!-- Container-fluid starts -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Authentication card start -->
                    <div class="login-card card-block auth-body mr-auto ml-auto">
                    <form class="md-float-material" action="{{ path('loginBack') }}" method="POST" novalidate>

                        
                            <div class="text-center">
                                <span style="position: relative; left: -60px;"><img src="assetsBack/images/auth/logo-dark.png" alt="logo.png"></span>
                            </div>
                            <form action="{{ path('loginBack') }}" method="POST" novalidate>
                            {% if error %}
                              <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                 {% if app.user %}
                              <div class="mb-3">

                                  <a href="{{ path('logout') }}">Logout</a>
                                 </div>
                                 {% endif %}

                                 
                            <div class="auth-box">
                            
                                <div class="row m-b-20">
                                    <div class="col-md-12">
                                        <h3 class="text-left txt-primary">Se connecter</h3>
                                    </div>
                                </div>
                                <hr/>
                                <div class="input-group">
                                 <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Email">                                    <span class="md-line"></span>
                                </div>
                                <div class="input-group">
                                <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
                                    <span class="md-line"></span>
                                </div>
                                <input type="checkbox" name="_remember_me"> <b style="color: #0a0a0a">Se souvenir de moi</b>
                                <input type="hidden" name="_csrf_token"
                                  value="{{ csrf_token('authenticate') }}" >
                                <div class="mb-3" >

                                    <a href="{{ path('app_forgot_password_request') }}" >Mot de passe oublier</a>
                                </div>
                                <div class="row m-t-25 text-left">
                                    <div class="col-sm-7 col-xs-12">
                                        
                                    </div>
                                    
                                </div>
                                <div class="row m-t-30" style="position: relative; top: -40px;">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" >Se connecter</button>
                                    </div>
                                </div>



                                <div class="row m-t-30" style="position: relative; top: -80px;">
                                    <div class="col-md-12">
                                        <button href="{{ path('connect_google') }}"  class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20 "  >Authentification Google pour les etudiants</button>
                                    </div>
                                </div>

                                <div class="row" style="position: relative; top: -70px;">
                                    <div class="col-md-10">
                                        <p class="text-inverse text-left m-b-0"><u> Inscrivez vous en tant que </u></p>
                                        <br>

                                        <a class="text-inverse text-left" href="{{path('etudiantNew')}}"><b>Etudiant</b></a>

                                        <a class="text-inverse text-left" href="{{path('newEntreprise')}}" style="position: relative; left: 60px;"><b>Entreprise</b></a>

                                    </div>
                                </div>

                            </div>
                        </form>
                    </form>
                        <!-- end of form -->
                    </div>
                    <!-- Authentication card end -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
